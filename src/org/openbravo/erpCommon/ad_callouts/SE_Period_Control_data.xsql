<SqlClass name="SEPeriodControlData" package="org.openbravo.erpCommon.ad_callouts">
  <SqlMethod name="select" type="preparedStatement" return="String">
    <SqlMethodComment></SqlMethodComment>
    <Sql>
      <![CDATA[
        SELECT 'Y' as IsPeriodControlAllowed
        FROM AD_OrgType 
        WHERE AD_OrgType_ID=? 
        AND (ISBUSINESSUNIT='Y' OR (ISLEGALENTITY='Y' AND ISACCTLEGALENTITY='Y'))
      ]]>
    </Sql>
    <Parameter name="adOrgId"/>
  </SqlMethod>
</SqlClass>
